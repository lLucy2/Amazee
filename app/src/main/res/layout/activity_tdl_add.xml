<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".TdlEditActivity">

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@android:color/transparent"
        android:paddingLeft="16dp"
        android:text="Cancel"
        android:textColor="#404040"
        android:textSize="18sp"
        android:background="@drawable/button_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ImageViewSaveTDL"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:padding="5dp"
        android:background="@drawable/button_selector"
        android:src="@drawable/tdl_save" />

    <EditText
        android:id="@+id/AddJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ImageViewSaveTDL"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_edittext"
        android:hint="Judul"
        android:padding="15dp"
        android:textColor="#454545"
        android:textColorHint="#BFBBBB" />

    <EditText
        android:id="@+id/AddPrioritas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddJudul"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Prioritas, Contoh : penting Banget !"
        android:padding="15dp"
        android:textColor="#454545"
        android:textColorHint="#BFBBBB" />

    <EditText
        android:id="@+id/AddDeskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AddPrioritas"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edittext"
        android:hint="Notes"
        android:padding="15dp"
        android:textColor="#454545"
        android:visibility="invisible"
        android:textColorHint="#BFBBBB" />

</RelativeLayout>